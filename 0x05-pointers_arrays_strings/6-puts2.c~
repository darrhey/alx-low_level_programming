#include <unistd.h>
#include <string.h>
#include <stdio.h>
#include "main.h"
/**
 * puts_half - prints every other character of a string
 * @str: string to be printed alternatively
 */

void puts_half(char *str)
{
int lenght;
int a;
lenght = strlen(str);
for (a = 0; a <= lenght; a += 2)
{
_putchar(str[a]);
}
_putchar('\n');
}
